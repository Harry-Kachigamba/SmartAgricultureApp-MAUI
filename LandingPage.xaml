<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartAgricultureApp_MAUI.LandingPage"
             BackgroundImageSource="landingpagebg.jpg"
             Title="Landing Page">
    
    
    <Grid>
        <Image Source="landingpageicon.svg" />
        
        <Label Text="Smart Agriculture"
               FontSize="30"
               TextColor="White"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Margin="0, 0, 0, 80" />
        
        <!-- Get Started Button -->
        <Button Text="Get Started"
                FontSize="20"
                BackgroundColor="#6E954D"
                TextColor="White"
                CornerRadius="10"
                WidthRequest="200"
                HorizontalOptions="Center"
                VerticalOptions="End"
                Margin="0, 0, 0, 20"
                Clicked="OnGetStartedClicked" />
    </Grid>
</ContentPage>